{
	"name": "gcov-viewer",
	"displayName": "Gcov Viewer",
	"description": "Annotate source files based on gcov output.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:gcov-viewer.show",
		"onCommand:gcov-viewer.hide",
		"onCommand:gcov-viewer.toggle",
		"onCommand:gcov-viewer.reload_coverage_data",
		"onCommand:gcov-viewer.delete_coverage_data",
		"onCommand:gcov-viewer.select_include_directory"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gcov-viewer.show",
				"title": "Show",
				"category": "Gcov Viewer"
			},
			{
				"command": "gcov-viewer.hide",
				"title": "Hide",
				"category": "Gcov Viewer"
			},
			{
				"command": "gcov-viewer.toggle",
				"title": "Toggle",
				"category": "Gcov Viewer"
			},
			{
				"command": "gcov-viewer.reload_coverage_data",
				"title": "Reload Coverage Data",
				"category": "Gcov Viewer"
			},
			{
				"command": "gcov-viewer.delete_coverage_data",
				"title": "Delete Coverage Data",
				"category": "Gcov Viewer"
			},
			{
				"command": "gcov-viewer.select_include_directory",
				"title": "Select Include Directory",
				"category": "Gcov Viewer"
			}
		],
		"configuration": [
			{
				"title": "Gcov Viewer",
				"properties": {
					"gcov_viewer.include_directories": {
						"type": "array",
						"title": "Include Directories",
						"scope": "window",
						"description": "Directories that will be included in the search for .gcda files."
					},
					"gcov_viewer.gcov_binary": {
						"type": "string",
						"title": "Gcov binary",
						"scope": "machine",
						"description": "Path to the gcov binary",
						"default": "gcov"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/recursive-readdir": "^2.2.0",
		"recursive-readdir": "^2.2.2"
	}
}
